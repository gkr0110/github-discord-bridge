{
    "workflows": [
        {
            "name": "New Pull Requests",
            "event": "pull_request",
            "filters": {
                "action": "opened",
                "is_draft": false
            },
            "actions": [
                {
                    "webhook_env": "DISCORD_WEBHOOK_DEV",
                    "format": "pr_detailed"
                }
            ]
        },
        {
            "name": "Commit to Main",
            "event": "push",
            "filters": {
                "branch": "refs/heads/main"
            },
            "actions": [
                {
                    "webhook_env": "DISCORD_WEBHOOK_ALERTS",
                    "format": "commit_simple"
                }
            ]
        },
        {
            "name": "High Priority Issues",
            "event": "issues",
            "filters": {
                "action": "opened",
                "labels_include": [
                    "bug",
                    "urgent",
                    "critical",
                    "priority"
                ]
            },
            "actions": [
                {
                    "webhook_env": "DISCORD_WEBHOOK_DEV",
                    "format": "issue_priority"
                }
            ]
        },
        {
            "name": "New Release (Dev)",
            "event": "release",
            "filters": {
                "action": "published",
                "is_prerelease": false,
                "is_draft": false
            },
            "actions": [
                {
                    "webhook_env": "DISCORD_WEBHOOK_DEV",
                    "format": "release_detailed"
                }
            ]
        },
        {
            "name": "New Release (Announcements)",
            "event": "release",
            "filters": {
                "action": "published",
                "is_prerelease": false,
                "is_draft": false
            },
            "actions": [
                {
                    "webhook_env": "DISCORD_WEBHOOK_ANNOUNCEMENTS",
                    "format": "release_simple"
                }
            ]
        }
    ]
}